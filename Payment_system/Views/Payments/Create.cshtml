@model Payment_system.Models.Payment

@{
    ViewData["Title"] = "Create";
}



<h4>Payments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment_Id" class="control-label"></label>
                <input asp-for="Appointment_Id" class="form-control" />
                <span asp-validation-for="Appointment_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prescription_Id" class="control-label"></label>
                <input asp-for="prescription_Id" class="form-control" />
                <span asp-validation-for="prescription_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total_Amount" class="control-label"></label>
                <input asp-for="Total_Amount" class="form-control" />
                <span asp-validation-for="Total_Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cash_Amount" class="control-label"></label>
                <input asp-for="Cash_Amount" class="form-control" />
                <span asp-validation-for="Cash_Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credit_Amount" class="control-label"></label>
                <input asp-for="Credit_Amount" class="form-control" />
                <span asp-validation-for="Credit_Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCard_Num" class="control-label"></label>
                <input asp-for="CreditCard_Num" class="form-control" />
                <span asp-validation-for="CreditCard_Num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay Now" class="btn btn-danger" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to recent Payment List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
